<% content_for :title do %><%= t('.articles') %><% end %>
<% content_for :page_title do %><i class="fa fa-rss"></i>  <%= t('.articles') %><% end %>
<% content_for :page_toolbar do %><%= erp_component('button/create', {text: t('.create'), href: erp_pgdq.new_backend_article_path, class: 'btn-noborder'}) %><% end %>
<%= erp_datalist(
    url: erp_pgdq.list_backend_articles_path,
    keywords: [
        {text: t('.name'), name: 'erp_pgdq_articles.name'},
        {text: t('.category'), name: 'erp_pgdq_categories.name', select: {name: 'erp_pgdq_categories.id', data_url: erp_pgdq.dataselect_backend_categories_path}},
        {text: t('creator'), name: 'erp_users.name', select: {name: 'erp_users.id', data_url: erp.dataselect_backend_users_path}}
    ],
    filters: [{text: t('.is_slider'), name: 'is_slider', value: true, checked: false}],
    columns: [
        {text: t('image'), name: 'image', value: true, checked: true},
        {text: t('.name'), name: 'name', value: true, checked: true},
        {text: t('.category'), name: 'category', value: true, checked: true},
        {text: t('status'), name: 'status', value: true, checked: true},
        {text: t('creator'), name: 'creator', value: true, checked: false},
        {text: t('created_at'), name: 'created_at', value: true, checked: true}
    ],
    sort: {sort_by: 'erp_pgdq_articles.created_at', sort_direction: 'desc'}
) %>