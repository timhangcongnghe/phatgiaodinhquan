<% content_for :title do %><%= @article.get_name %><% end %>
<% content_for :page_title do %>    
    <a href="<%= erp_pgdq.backend_articles_path %>">
        <i class="fa fa-rss"></i>  <%= t('.articles') %>
    </a> / <%= @article.get_name %>
<% end %>
<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_pgdq.new_backend_article_path,
        class: 'btn-noborder'
    }) %>
<% end %>
<div class="row">
    <div class="col-md-12">
        <% if @article.errors.any? %><%= erp_form_control("form_error_message") %><% end %>
        <%= render 'form', article: @article %>
    </div>
</div>