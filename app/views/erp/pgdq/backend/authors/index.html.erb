<% content_for :title do %><%= t('.authors') %><% end %>
<% content_for :page_title do %><i class="fa fa-rss"></i>  <%= t('.authors') %><% end %>
<% content_for :page_toolbar do %><%= erp_component('button/create', {text: t('.create'), href: erp_pgdq.new_backend_author_path, class: 'btn-noborder'}) %><% end %>
<%= erp_datalist(
    url: erp_pgdq.list_backend_authors_path,
    keywords: [
        {text: t('.short_name'), name: 'erp_pgdq_authors.short_name'},
        {text: t('creator'), name: 'erp_users.name', select: {name: 'erp_users.id', data_url: erp.dataselect_backend_users_path}}
    ],
    columns: [
        {text: t('image'), name: 'image', value: true, checked: true},
        {text: t('.short_name'), name: 'short_name', value: true, checked: true},
        {text: t('.long_name'), name: 'long_name', value: true, checked: true},
        {text: t('.article_count'), name: 'article_count', value: true, checked: true},
        {text: t('creator'), name: 'creator', value: true, checked: false},
        {text: t('created_at'), name: 'created_at', value: true, checked: true}
    ],
    sort: {sort_by: 'erp_pgdq_authors.created_at', sort_direction: 'desc'}
) %>