<% title @author.get_title_name %>
<% content_for :metas do %>
<meta property="og:locale" content="vi-VN" />
<meta property="og:type" content="website"/>
<meta property="og:title" content="<%= @author.get_title_name %> &#8211; GHPGVN Huyện Định Quán"/>
<% if @meta_description.present? %><meta property="og:description" content="<%= @meta_description %>"/><% else %><meta property="og:description" content="Trang tin GHPGVN Huyện Định Quán cập nhật liên tục, nhanh chóng những thông tin, hình ảnh, hoạt động Phật sự, Ban Trị sự, Ban ngành và các hoạt động khác tại huyện Định Quán, tỉnh Đồng Nai."/><% end %>
<meta property="og:url" content="https://phatgiaodinhquan.org<%= author_link(@author) %>"/>
<meta property="og:site_name" content="<%= @author.get_title_name %>" />
<meta property="og:image" content="https://phatgiaodinhquan.org/img/social-share.jpg"/>
<meta property="og:image:alt" content="GHPGVN Huyện Định Quán"/>
<meta property="og:image:width" content="1200"/>
<meta property="og:image:height" content="560"/>

<meta name="twitter:card" content="summary"/>
<meta name="twitter:site" content="https://phatgiaodinhquan.org<%= author_link(@author) %>"/>
<meta name="twitter:title" content="<%= @author.get_title_name %> &#8211; GHPGVN Huyện Định Quán" />
<% if @meta_description.present? %><meta name="twitter:description" content="<%= @meta_description %>"/><% else %><meta name="twitter:description" content="Trang tin GHPGVN Huyện Định Quán cập nhật liên tục, nhanh chóng những thông tin, hình ảnh, hoạt động Phật sự, Ban Trị sự, Ban ngành và các hoạt động khác tại huyện Định Quán, tỉnh Đồng Nai."/><% end %>
<meta name="twitter:image" content="https://phatgiaodinhquan.org/img/social-share.jpg"/>
<meta name="twitter:image:alt" content="GHPGVN Huyện Định Quán"/>
<% end %>

<div id="content" class="site-content container">
    <div id="main-content-row" class="tie-row main-content-row">
        <div class="main-content tie-col-md-8 tie-col-xs-12" role="main">
            <header class="entry-header-outer container-wrapper">
                <nav id="breadcrumb">
                    <%= link_to '<span class="tie-icon-home" aria-hidden="true"></span> Trang Chủ'.html_safe, root_link, title: 'Trang Chủ' %>
                    <em class="delimiter"><span class="fa fa-angle-right"></em><span class="current">Tác Giả <%= @author.get_short_name %></span>
                </nav>
                <h1 class="page-title"><span class="vcard"><%= @author.get_short_name %></span></h1>
                <div class="about-author container-wrapper about-author-1">
                    <% if @author.image.present? %>
                        <div class="author-avatar">
                            <a href="<%= author_link(@author) %>" title="<%= @author.get_short_name %>">
                                <img alt='<%= @author.get_short_name %>' title="<%= @author.get_short_name %>" src='<%= @author.image.detail_1x %>' srcset='<%= @author.image.detail_2x %> 2x' class='avatar avatar-180 photo' height='180' width='180' loading='lazy'/>
                            </a>
                        </div>
                    <% else %>
                        <div class="author-avatar">
                            <a href="<%= author_link(@author) %>" title="<%= @author.get_short_name %>">
                                <img alt='<%= @author.get_short_name %>' title="<%= @author.get_short_name %>" src='/img/author-140x140.png' srcset='/img/author-280x280.png 2x' class='avatar avatar-180 photo' height='180' width='180' loading='lazy'/>
                            </a>
                        </div>
                    <% end %>
                    <div class="author-info">
                        <h3 class="author-name">
                            <%= link_to @author.get_long_name, author_link(@author), title: @author.get_long_name %>
                        </h3>
                        <div class="author-bio"><%= @author.description %></div>
                        <ul class="social-icons">
                            <li class="social-icons-item">
                                <a href="<%= @author.email %>" rel="external noopener nofollow" target="_blank" class="social-link url-social-icon" title="Website">
                                    <span class="tie-icon-home" aria-hidden="true"></span>
                                    <span class="screen-reader-text">Website</span>
                                </a>
                            </li>
                            <li class="social-icons-item">
                                <a href="<%= @author.facebook %>" rel="external noopener nofollow" target="_blank" class="social-link facebook-social-icon" title="FaceBook">
                                    <span class="tie-icon-facebook" aria-hidden="true"></span>
                                    <span class="screen-reader-text">FaceBook</span>
                                </a>
                            </li>
                            <li class="social-icons-item">
                                <a href="<%= @author.twitter %>" rel="external noopener nofollow" target="_blank" class="social-link twitter-social-icon" title="Twitter">
                                    <span class="tie-icon-twitter" aria-hidden="true"></span>
                                    <span class="screen-reader-text">Twitter</span>
                                </a>
                            </li>
                            <li class="social-icons-item">
                                <a href="<%= @author.instagram %>" rel="external noopener nofollow" target="_blank" class="social-link instagram-social-icon" title="Instagram">
                                    <span class="tie-icon-instagram" aria-hidden="true"></span>
                                    <span class="screen-reader-text">Instagram</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </header>
            <% if @articles.count > 0 %>
                <div class="mag-box wide-post-box">
                    <div class="container-wrapper">
                        <div class="mag-box-container clearfix">
                            <ul id="posts-container" data-layout="default" data-settings="{'uncropped_image':'jannah-image-post','category_meta':true,'post_meta':true,'excerpt':'true','excerpt_length':'20','read_more':'true','read_more_text':false,'media_overlay':true,'title_length':0,'is_full':false,'is_category':false}" class="posts-items">
                                <% @articles.each do |article| %>
                                    <li class="post-item  post type-post status-publish format-standard has-post-thumbnail category-tie-life-style tag-foods tie-video">
                                        <a aria-label="<%= article.get_name %>" href="<%= article_detail_link(article) %>" title="<%= article.get_name %>" class="post-thumb">
                                            <span class="post-cat-wrap"><span class="post-cat tie-cat-19"><%= article.get_category_name %></span></span>
                                            <div class="post-thumb-overlay-wrap">
                                                <div class="post-thumb-overlay">
                                                    <span class="tie-icon tie-media-icon"></span>
                                                </div>
                                            </div>
                                            <img width="390" height="220" src="<%= article.image.listing %>" class="attachment-jannah-image-large size-jannah-image-large wp-post-image" alt="" title="<%= article.get_name %>" loading="lazy" />
                                        </a>
                                        <div class="post-details">
                                            <div class="post-meta clearfix">
                                                <% if article.author.present? %>
                                                    <span class="author-meta single-author no-avatars">
                                                        <span class="meta-item meta-author-wrapper meta-author-1">
                                                            <span class="meta-author">
                                                                <%= link_to article.get_author_name, author_link(article.author), title: article.get_author_name, class: 'author-name tie-icon' %>
                                                            </span>
                                                        </span>
                                                    </span>
                                                <% end %>
                                                <span class="date meta-item tie-icon"><%= article.date_public.strftime("%d-%m-%Y") %></span>
                                            </div>
                                            <h2 class="post-title text-justify">
                                                <%= link_to article.get_name, article_detail_link(article), title: article.get_name %>
                                            </h2>
                                            <p class="post-excerpt text-justify"><%= truncate(article.meta_description, length: 160) %></p>
                                            <%= link_to 'Đọc tiếp ... &raquo;'.html_safe, article_detail_link(article), title: article.get_name, class: 'more-link button' %>
                                        </div>
                                    </li>
                                <% end %>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
                <% if @articles.count > 20 %>
                    <div class="pages-nav">
                        <%= will_paginate @articles, previous_label: '&laquo;'.html_safe, next_label: '&raquo;'.html_safe, renderer: BootstrapPagination::Rails, inner_window: 1, outer_window: 1 %>
                    </div>
                <% end %>
            <% end %>
        </div>
        <%= render 'layouts/erp/frontend/sidebar' %>
    </div>
</div>