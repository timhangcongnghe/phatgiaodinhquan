<div id="content" class="site-content container">
<div class="tie-row main-content-row">
   <div class="main-content tie-col-md-8 tie-col-xs-12" role="main">
      <article id="the-post" class="container-wrapper post-content tie-standard">
         <header class="entry-header-outer">
            <nav id="breadcrumb">
               <a href=""><span class="fa fa-home" aria-hidden="true"></span> Trang Chủ</a>
               <em class="delimiter">/</em><a href="<%= category_link(@category) %>"><%= @category.get_name %></a>
               <em class="delimiter">/</em><span class="current"><%= truncate(@article.get_name, length: 70) %></span>
            </nav>
            <script type="application/ld+json">{"@context":"http:\/\/schema.org","@type":"BreadcrumbList","@id":"#Breadcrumb","itemListElement":[{"@type":"ListItem","position":1,"item":{"name":"Home","@id":"https:\/\/jannah.tielabs.com\/demo\/"}},{"@type":"ListItem","position":2,"item":{"name":"Sports","@id":"https:\/\/jannah.tielabs.com\/demo\/category\/sports\/"}},{"@type":"ListItem","position":3,"item":{"name":"Football","@id":"https:\/\/jannah.tielabs.com\/demo\/category\/sports\/football\/"}}]}</script> 
            <div class="entry-header">
               <span class="post-cat-wrap">
                  <% @category.parent.children.all.each do |child| %>
                  <%= link_to child.get_name, category_link(child), title: child.get_name, class: 'post-cat' %>
                  <% end %>
               </span> 
               <h1 class="post-title entry-title text-justify"><%= @article.get_name %></h1>               
            </div>
         </header>
         <div class="featured-area">
            <div class="featured-area-inner">
               <figure class="single-featured-image">
                  <img width="780" height="470" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAYYAAADcAQMAAABOLJSDAAAAA1BMVEUAAACnej3aAAAAAXRSTlMAQObYZgAAACJJREFUaIHtwTEBAAAAwqD1T20ND6AAAAAAAAAAAAAA4N8AKvgAAUFIrrEAAAAASUVORK5CYII="
                       class="attachment-jannah-image-post size-jannah-image-post lazy-img wp-post-image"
                       alt="<%= @article.get_name %>" title="<%= @article.get_name %>" loading="lazy"
                       data-src="<%= @article.image.detail %>" />
               </figure>
            </div>
         </div>
         <div class="entry-content text-justify entry clearfix"><%= @article.content.html_safe %></div>
         <div class="post-footer post-footer-on-bottom">
            <div class="share-links share-centered icons-only">
               <div class="share-title"><span class="fa fa-share-alt" aria-hidden="true"></span><span> Chia sẽ bài viết</span></div>
               <a href="//www.facebook.com/sharer.php?u=<%= 'https://phatgiaodinhquan.org' + article_link(@article) %>" rel="external noopener" target="_blank" class="facebook-share-btn"><span class="fa fa-facebook"></span><span class="screen-reader-text">Facebook</span></a>
               <a href="//twitter.com/intent/tweet?text=<%= @article.get_name %>;url=<%= 'https://phatgiaodinhquan.org' + article_link(@article) %>;via=tielabs" rel="external noopener" target="_blank" class="twitter-share-btn"><span class="fa fa-twitter"></span><span class="screen-reader-text">Twitter</span></a>
               <a href="//www.linkedin.com/shareArticle?mini=true&#038;url=<%= 'https://phatgiaodinhquan.org' + article_link(@article) %>;title=<%= @article.get_name %>" rel="external noopener" target="_blank" class="linkedin-share-btn"><span class="fa fa-linkedin"></span><span class="screen-reader-text">LinkedIn</span></a>
               <a href="//www.tumblr.com/share/link?url=<%= 'https://phatgiaodinhquan.org' + article_link(@article) %>;name=<%= @article.get_name %>" rel="external noopener" target="_blank" class="tumblr-share-btn"><span class="fa fa-tumblr"></span><span class="screen-reader-text">Tumblr</span></a>
               <a href="//pinterest.com/pin/create/button/?url=h<%= 'https://phatgiaodinhquan.org' + article_link(@article) %>;description=<%= @article.meta_description %>;media=<%= @article.image.detail %>" rel="external noopener" target="_blank" class="pinterest-share-btn"><span class="fa fa-pinterest"></span><span class="screen-reader-text">Pinterest</span></a>
               <a href="//reddit.com/submit?url=<%= 'https://phatgiaodinhquan.org' + article_link(@article) %>;title=<%= @article.get_name %>" rel="external noopener" target="_blank" class="reddit-share-btn"><span class="fa fa-reddit"></span><span class="screen-reader-text">Reddit</span></a>
               <a href="mailto:?subject=<%= @article.get_name %>;body=<%= 'https://phatgiaodinhquan.org' + article_link(@article) %>" rel="external noopener" target="_blank" class="email-share-btn"><span class="fa fa-envelope"></span><span class="screen-reader-text">Share via Email</span></a>
            </div>
         </div>
      </article>
