            },            
            {
                "@type": "ListItem", 
                "position": 2, 
                "name": "<%= @category.get_name %>",
                "item": "http://chualinhquang.com.vn<%= category_link(@category) %>"  
            },
            {
                "@type": "ListItem", 
                "position": 3, 
                "name": "<%= @article.get_name %>",
                "item": "http://chualinhquang.com.vn<%= article_link(@article) %>"  
