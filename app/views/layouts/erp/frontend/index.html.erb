                            </div>
                        </div>
                    </div>                        
                </div>
             </aside>
        </div>
    </div>        
    <div id="is-scroller-outer"><div id="is-scroller"></div></div>
    <link rel="preload" href="/css/style.css" as="style" onload="this.onload=null;this.rel='stylesheet'" />
    <noscript><%= stylesheet_link_tag '/css/style.css' %></noscript>
    <link rel='preload' href="/css/helpers.min.css" as='style' onload='this.onload=null;this.rel="stylesheet"' />
    <noscript><%= stylesheet_link_tag '/css/helpers.min.css' %></noscript>
    <link rel='preload' href="/css/dark-skin.css" as='style' onload='this.onload=null;this.rel="stylesheet"' />
    <noscript><%= stylesheet_link_tag '/css/dark-skin.css' %></noscript>
    <%= javascript_include_tag '/js/js-custom.js' %>
    <%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js' %>
    <%= javascript_include_tag '/js/scripts.js' %>
    <%= javascript_include_tag '/js/scripts.min.js' %>
    <%= javascript_include_tag '/js/lightbox.js' %>
    <%= javascript_include_tag '/js/desktop.min.js' %>
    <%= javascript_include_tag '/js/live-search.js' %>
    <%= javascript_include_tag '/js/br-news.js' %>
