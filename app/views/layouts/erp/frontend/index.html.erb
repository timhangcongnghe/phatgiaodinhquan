            {
                "@type": "ListItem", 
                "position": 2, 
                "name": "<%= @category.parent.get_name %>",
                "item": "http://chualinhquang.com.vn<%= category_link(@category.parent) %>"  
            },
            {
                "@type": "ListItem", 
                "position": 3, 
                "name": "<%= @category.get_name %>",
                "item": "http://chualinhquang.com.vn<%= category_link(@category) %>"  
