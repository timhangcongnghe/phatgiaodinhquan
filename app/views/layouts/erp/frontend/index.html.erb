        <% if params[:controller] == 'erp/pgdq/frontend/article' && params[:action] == 'index' %>
        <script type="application/ld+json">
        {
            "@context": "https://schema.org/", 
            "@type": "BreadcrumbList", 
            "itemListElement": [{
                "@type": "ListItem", 
